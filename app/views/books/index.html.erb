<h1>Books</h1>
<span>title</span><sapn>body</sapn>
<% @books.each do |book| %>
  <div>
    <sapn><%= book.title %></sapn>
    <span><%= book.body %></span>
    <%= link_to "show", book_path(book.id) %>
    <%= link_to "edit", edit_book_path(book.id) %>
    <%= link_to "destroy", book_path(book.id), method: :delete, data: { confirm: '本当に消しますか？'} %>
  </div>
<% end %>
<h1>New book</h1>
<% if @book.errors.any? %>
  <h3><%= @book.errors.count %>件のerrorが発生しました</h3>
  <% @book.errors.full_messages.each do |message| %>
    <p><%= message %></p>
  <% end %>
<% end %>
<%= form_with model: @book do |f| %>
  <div>
    <div><%= f.label :名前 %></div>
    <div><%= f.text_field :title %></div>
  </div>
  <div>
    <div><%= f.label :本文 %></div>
    <div><%= f.text_area :body %></div>
  </div>
  <%= f.submit "create Book" %>
<% end %>